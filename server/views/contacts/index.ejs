<%include ../partials/header.ejs %>

<!--contents goes here-->
<!--div.container>div.row>div.col-md-offset-3.col-md-6-->
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1><%= title %></h1>

      <a class="btn btn-primary" href="/contact-list/add" role="button">
        <i class="fa fa-plus-circle"></i> Add Contact </a
      >
      <br />
      <!--table.table.table-bordered.table-striped.table.hover>tr>th*5.text-center-->
      <table class="table table-bordered table-striped hover">
        <!-- Header row-->
        <tr>
          <th class="text-center">First Name</th>
          <th class="text-center">Last Name</th>
          <th class="text-center">Age</th>
          <th class="text-center"></th>
          <th class="text-center"></th>
        </tr>
        <!--Templet Row-->
        <% for(let count = 0; count < contactList.length; count++) { %>
        <tr>
          <td class="text-center">
            <%= contactList[count].first_name %>
          </td>
          <td class="text-center">
            <%= contactList[count].last_name %>
          </td>
          <td class="text-center">
            <%= contactList[count].age %>
          </td>

          <td class="text-center">
            <a
              href="/contact-list/edit/<%= contactList[count]._id %>"
              class="btn btn-primary"
              ><i class="fa fa-pencil-alt"></i>Edit
            </a>
          </td>

          <td class="text-center">
            <a
              href="/contact-list/delete/<%= contactList[count]._id %>"
              class="btn btn-danger"
              ><i class="fa fa-trash-alt"></i>Delete
            </a>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
  </div>
</div>

<%include ../partials/footer.ejs %>
